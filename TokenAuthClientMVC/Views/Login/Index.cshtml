@model User
@{
    ViewData["Title"] = "Login Page";
}
<h1>Login</h1>
<form method="post" enctype="multipart/form-data" asp-controller="Login"  asp-action="Index">
    <table>
        <tr>
            <td>User Id</td>
            <td><input required type="text" id="uid" name="uid" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input required type="text" id="password" name="password" /></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Login" /></td>
        </tr>
    </table>
    <hr />

</form>
